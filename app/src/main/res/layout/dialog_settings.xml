<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/dialog_background">
    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginTop="@dimen/dim_dialog_def_margin"
        android:layout_marginStart="@dimen/dim_dialog_def_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/myDarkBlue_GoldTransparent"
        android:contentDescription="Icon"
        />
    <TextView
        android:id="@+id/tv_appName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_dialog_def_margin"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="@dimen/dim_dialog_def_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/iv_icon"
        android:text="@string/app_name"
        android:textColor="@color/myDarkBlue_GoldTransparent"
        android:textSize="22sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/tv_appName"
        app:layout_constraintLeft_toLeftOf="@id/tv_appName"
        android:text="@string/st_version"
        android:textColor="@color/myDarkBlue_GoldTransparent"
        android:textSize="22sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/tv_appVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="@dimen/dim_dialog_def_margin"
        app:layout_constraintBottom_toBottomOf="@id/tv_version"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/tv_version"
        android:text="@string/app_version"
        android:textColor="@color/myDarkBlue_GoldTransparent"
        android:textSize="22sp"
        />

    <ToggleButton
        android:id="@+id/tb_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="@dimen/dim_dialog_def_margin"
        app:layout_constraintTop_toBottomOf="@id/iv_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tb_nightMode"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="5dp"
        android:orientation="horizontal"
        android:background="@drawable/lang_toggle"
        android:textOff=""
        android:textOn=""
        />
    <ToggleButton
        android:id="@+id/tb_nightMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tb_language"
        app:layout_constraintLeft_toRightOf="@id/tb_language"
        app:layout_constraintRight_toRightOf="parent"
        android:elevation="5dp"
        android:orientation="horizontal"
        android:background="@drawable/dark_mode_toggle"
        android:textOff=""
        android:textOn=""
        android:checked="false"
        />

</androidx.constraintlayout.widget.ConstraintLayout>