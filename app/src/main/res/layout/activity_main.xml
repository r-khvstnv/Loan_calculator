<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/layout_background"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="5dp"
        android:background="@drawable/title_background"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="30dp"
            android:paddingStart="20dp"
            android:paddingVertical="10dp"
            android:text="@string/st_title_credit_choose"
            android:textSize="28sp"
            android:textAlignment="textStart"
            android:textColor="@color/myWhite_DarkBlue"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_annuity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_title"
        android:background="@drawable/ll_credit_types_background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:elevation="5dp"
        >
        <TextView
            android:id="@+id/tv_annuity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/st_annuity"
            android:textSize="28sp"
            android:textColor="@color/myPink_GoldTransparent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/st_annuity_meaning"
            android:textSize="18sp"
            android:textColor="@color/myWhite_GoldTransparent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/st_prompt"
            android:textSize="14sp"
            android:textColor="@color/myWhite_GoldTransparent"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_proportional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_annuity"
        android:background="@drawable/ll_credit_types_background"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:elevation="5dp"
        >
        <TextView
            android:id="@+id/tv_proportional_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/st_proportional"
            android:textSize="28sp"
            android:textColor="@color/myPink_GoldTransparent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="@string/st_proportional_meaning"
            android:textSize="18sp"
            android:textColor="@color/myWhite_GoldTransparent"
            />
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView_firstBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ads:layout_constraintBottom_toTopOf="@id/tb_language"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="20dp"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="@string/banner_id"
        >
    </com.google.android.gms.ads.AdView>

    <ToggleButton
        android:id="@+id/tb_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        android:elevation="10dp"
        android:translationZ="10dp"
        android:orientation="horizontal"
        android:background="@drawable/lang_toggle"
        android:textOff=""
        android:textOn=""
        />
    <ToggleButton
        android:id="@+id/tb_nightMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/tb_language"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        android:elevation="10dp"
        android:translationZ="10dp"
        android:orientation="horizontal"
        android:background="@drawable/dark_mode_toggle"
        android:textOff=""
        android:textOn=""
        android:checked="false"
        />

</androidx.constraintlayout.widget.ConstraintLayout>



