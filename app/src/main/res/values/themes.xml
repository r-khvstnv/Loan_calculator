<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LoanCalculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Theme colors for objects-->
    <item name="colorText" type="color">@color/myWhite</item>
    <item name="colorTextAccent" type="color">@color/myPink</item>
    <item name="colorTextDark" type="color">@color/myDarkBlue</item>

    <item name="colorBtnBackground" type="color">@color/myDarkBlue</item>
    <item name="colorBackgroundAccent" type="color">@color/myDarkBlue</item>
    <item name="colorEditText" type="color">@color/myDarkBlue</item>
    <item name="colorRippleEffect" type="color">@color/myPink</item>
    <item name="colorIcon" type="color">@color/myWhite</item>
    <item name="colorTitleBackground" type="color">@color/myDarkBlue</item>

    <item name="colorLayoutBackground" type="color">@color/myPinkLight</item>
    <item name="colorSnackBarBackground" type="color">@color/myDarkBlue</item>


    <style name="Theme.NoActionBarLoan" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/myDarkBlue</item>
        <item name="colorPrimaryVariant">@color/myDarkBlue</item>
        <item name="colorOnPrimary">@color/myDarkBlue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/myPink</item>
        <item name="colorSecondaryVariant">@color/myPink</item>
        <item name="colorOnSecondary">@color/myPink</item>

        <item name="android:statusBarColor">@color/myPinkLight</item>
        <item name="android:navigationBarColor">@color/myPinkLight</item>
    </style>
    
    <style name="MyEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorControlNormal">@color/colorEditText</item>
        <item name="colorControlActivated">@color/colorEditText</item>
        <item name="colorControlHighlight">@color/colorEditText</item>
    </style>
</resources>